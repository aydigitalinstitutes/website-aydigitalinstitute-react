  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "auth/auth.service.ts",
      "auth/repositories/**/*.ts",
      "modules/admin/repositories/admin-users.repository.ts",
      "modules/admin/services/admin-users.service.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "testEnvironment": "node"
  }
}
