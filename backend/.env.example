# Environment Variables
# Copy this file to .env and update with your values

# Server
PORT=5000
NODE_ENV=development

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aydigital
DB_USER=postgres
DB_PASSWORD=postgres
